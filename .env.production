# Production Environment Configuration
# Copy this to .env and update values for your environment

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change-this-secure-password
DB_NAME=beat_analyzer_prod

# Application Configuration
CORS_ORIGINS=https://your-domain.com
JWT_SECRET_KEY=change-this-to-a-very-long-random-string
MAX_FILE_SIZE=100MB

# SSL Configuration (for nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring
ENABLE_HEALTH_CHECK=true
LOG_LEVEL=INFO

# File Storage
FILE_STORAGE_PATH=/app/uploads
UPLOAD_EXPIRY_DAYS=30
